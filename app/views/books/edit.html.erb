<h1>Editing Book</h1>

<% if flash[:notice] %>
  <div class="flash"></div>
<% end %>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>