<% if flash[:notice] %>
  <div class="flash">
 <%= flash[:notice] %>
</div>
<% end %>

<div class="container">
<div class="row">
  <div class="col-xs-3"><%= render 'users/list', book:@book_new, user:@user %></div>
  <div class="col-xs-9">
    <h1>Book detail</h1>
  <table class="table table">
    <tbody>
      <tr>
     <td><%= attachment_image_tag current_user, :profile_image, size:"50x50", format: 'jpeg',fallback: "/assets/no_image.jpg" %></td>
       <td><%= link_to @user.name, user_path(@user.id) %></td>
    	 <td><%= link_to @book.title, user_path(@user.id) %></td>
      <%= @book.title %></td>
    	  <td><%= @book.body %></td>
    	  <td><% if @book.user_id == current_user.id %>
      <%= link_to "Edit", edit_book_path %>
      <% end %>
        </td>
    	 <td><% if @book.user_id == current_user.id %>
           <%= link_to "Destroy", book_path(@book.id), method: :delete %>
           <% end %>
       </td>
    	</tr>
    </tbody>
  </table>
</div>
</div>

</div>

