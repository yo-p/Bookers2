<div class="container">
  <div class="row">
<div class="col-xs-3"><%= render 'users/list', book: @book, user: @user %></div>
<div class="col-xs-9">
  <h1>Users</h1>
<table class="table table">
  <thead>
  	<tr>
      <td>image</td>
  	  <td>name</td>
  	  <td></td>
  	</tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
   <tr>
   	<td><%= attachment_image_tag user, :profile_image, size:"50x50", format: 'jpeg', fallback: "/assets/no_image.jpg" %></td>
   	<td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
   </tr>
   <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
